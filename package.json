{
  "name": "colors-mcp",
  "displayName": "colors-mcp",
  "publisher": "SyedSyab",
  "description": "Generate professional color palettes as CSS variables.",
  "version": "0.0.31",
  "repository": {
    "type": "git",
    "url": "https://github.com/SyabAhmad/colors.git"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "icon": "images/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:colors.generateColors",
    "onCommand:colors.generatePalette"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "colors.generateColors",
        "title": "Colors: Generate Colors"
      },
      {
        "command": "colors.generatePalette",
        "title": "Colors: Generate Palette"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build:mcp && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:mcp": "tsc --outDir dist/mcp --target ES2020 --module commonjs --rootDir mcp mcp/server.ts mcp/palette.ts",
    "watch:mcp": "tsc --outDir dist/mcp --target ES2020 --module commonjs --rootDir mcp --watch mcp/server.ts mcp/palette.ts",
    "start:mcp": "node dist/mcp/server.js",
    "test:mcp": "node testRequest.js",
    "test:palette": "node tests/palette.test.js",
    "pretest": "npm run build:mcp && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "culori": "^2.1.1"
  },
  "files": [
    "out/**",
    "dist/mcp/**",
    "README.md",
    "package.json",
    "images/**"
  ],
  "mcp": {
    "servers": {
      "colors-mcp": {
        "command": "node",
        "args": [
          "dist/mcp/server.js"
        ],
        "env": {
          "NODE_ENV": "production"
        }
      }
    }
  }
}
